{
    "name": "GTZCode",
    "version": "0.6",
    "description": "GTZCode for Google Chrome.",
    "browser_action": {
        "default_icon": "img/gtzcode_16x16.png",
        "default_title": "GTZCode",
        "popup": {
           "path": "popup.html"
        }
    },
    "background_page": "background.html",
    "icons": {
        "16": "img/gtzcode_16x16.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*.gametz.com/*"],
        "js": ["page.js"]
      }
    ],    
    "permissions": [
		"tabs",
        "contextMenus",
        "http://*.gametz.com/*",
        "http://*/*", "https://*/*"
    ],
    "options_page": "options.html"    
}